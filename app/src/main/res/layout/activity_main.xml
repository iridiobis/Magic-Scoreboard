<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo"
    >


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/main_two_players"
        android:textAllCaps="true"
        android:id="@+id/BtnDos"
        android:layout_above="@+id/BtnTres"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#55888888"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/main_three_players"
        android:textAllCaps="true"
        android:id="@+id/BtnTres"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#55888888"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/main_2vs2"
        android:textAllCaps="true"
        android:id="@+id/BtnCuatro"
        android:layout_below="@+id/BtnTres"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#55888888"/>

</RelativeLayout>

